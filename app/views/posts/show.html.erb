	<p id="notice"><%= notice %></p>
	<p>
	  <b>Name:</b>
	  <%= @post.name %>
	</p>

	<p>
	  <b>Email:</b>
	  <%= @post.email %>
	</p>

	<p>
	  <b>Title:</b>
	  <%= @post.title %>
	</p>

	<p>
	  <b>Content:</b>
	  <%= @post.content %>
	</p>
	
	<p>
		<b>Tags:</b>
		<%= join_tags(@post) %>
	</p>

	<h2>Comments(<%= @post.comments(true).size %>)</h2>
	<% if @post.comments(true).empty? == true %>
		<p>No comments yet</p>
	<% end %>
	<%= render @post.comments %>

	<h2>Add a Comment:</h2>
	<%= render "comments/form" %>

	<%= link_to 'Edit', edit_post_path(@post) %> |
	<%= link_to 'Back', posts_path %>
